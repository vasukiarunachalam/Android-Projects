<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/fabric_bg"
   android:theme="@android:style/Theme.Holo.Light.Panel">


    <ImageView
        android:id="@+id/btnDresses"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_dress_bg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Dresses"
        android:textColor="@color/black"
        android:typeface="normal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:text="Skirts"
        android:src="@drawable/img_skirts_bg"
        android:id="@+id/btnSkirts"
        android:layout_gravity="center_horizontal"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Skirts"
        android:textColor="@color/black"
        android:typeface="normal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:text="Tops"
        android:src="@drawable/img_tops_bg"
        android:id="@+id/btnTops"
        android:layout_gravity="center_horizontal"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Tops"
        android:textColor="@color/black"
        android:typeface="normal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/buttonAdmin"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Admin" />

</LinearLayout>
